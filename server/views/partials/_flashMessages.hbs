{{#if successMessage}}
  <script>
    document.querySelector('script[src="/bundle.js"]').onload = ()=>{
        M.toast({
            html: "<i class='material-icons'>check</i> {{ successMessage }}",
            classes: 'card-panel green accent-4 white-text',
            displayLenght: 2000
        })
    }
  </script>
{{/if}}
{{#if infoMessage}}
